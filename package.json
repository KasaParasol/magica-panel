{
    "name": "magica-panel",
    "version": "0.0.2",
    "type": "module",
    "description": "MDIなUIを構築します。",
    "main": "index.js",
    "scripts": {
        "build:js-dev": "webpack --mode development",
        "build:js-demo": "webpack --env mode=demo",
        "lint": "xo",
        "test": "c8 -r html ava --verbose",
        "test:cui": "c8 ava --verbose"
    },
    "author": "KasaParasol",
    "license": "MIT",
    "devDependencies": {
        "ava": "^5.1.0",
        "c8": "^7.12.0",
        "cpx": "^1.5.0",
        "jsdom": "^21.0.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "xo": "^0.53.1"
    },
    "xo": {
        "env": "browser",
        "space": 4,
        "rules": {
            "import/extensions": "off",
            "import/no-anonymous-default-export": "off",
            "n/file-extension-in-import": "off",
            "brace-style": [
                "warn",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "space-before-function-paren": [
                "error",
                "always"
            ],
            "unicorn/prevent-abbreviations": "off",
            "space-infix-ops": [
                "warn"
            ],
            "curly": [
                "warn"
            ],
            "no-bitwise": "off",
            "unicorn/prefer-number-properties": [
                "error",
                {
                    "checkInfinity": false
                }
            ],
            "unicorn/empty-brace-spaces": "off",
            "unicorn/no-nested-ternary": "off",
            "default-case": "off",
            "guard-for-in": "off",
            "no-implicit-coercion": "off"
        },
        "ignores": [
            "/demo"
        ]
    }
}
